{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "bentofile.yaml",
    "description": "Configuration schema for a YAML service file type.",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "service": {
            "type": "string",
            "description": "The name of the service."
        },
        "labels": {
            "type": "object",
            "description": "Labels associated with the service.",
            "additionalProperties": {
                "type": "string"
            }
        },
        "include": {
            "type": "array",
            "description": "Files to include.",
            "items": {
                "type": "string"
            }
        },
        "python": {
            "type": "object",
            "description": "Python-specific configurations.",
            "properties": {
                "packages": {
                    "type": "array",
                    "description": "Python packages required for the service.",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "packages"
            ]
        }
    },
    "required": [
        "service",
        "labels",
        "include",
        "python"
    ]
}