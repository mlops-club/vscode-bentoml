{
  "name": "clearml-session-manager",
  "displayName": "ClearML Session Manager",
  "description": "List, start, stop, and connect to ClearML Sessions from VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clearml-explorer-view-container",
          "title": "ClearML Sessions",
          "icon": "resources/clearml-logo.svg"
        }
      ]
    },
    "views": {
      "clearml-explorer-view-container": [
        {
          "id": "clearmlSessions",
          "name": "ClearML Sessions"
        }
      ]
    },
    "commands": [
      {
        "command": "clearmlSessions.installPythonDependencies",
        "title": "ClearML: Install Python Dependencies"
      },
      {
        "command": "clearmlSessions.refreshEntry",
        "title": "ClearML: Refresh sessions",
        "icon": "$(refresh)"
      },
      {
        "command": "clearmlSessions.openInBrowser",
        "title": "View in browser",
        "icon": "$(link-external)"
      },
      {
        "command": "clearmlSessions.attachToSession",
        "title": "Attach to session",
        "icon": "$(debug-start)"
      },
      {
        "command": "clearmlSessions.copyValueToClipboard",
        "title": "Copy to clipboard"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "clearmlSessions.refreshEntry",
          "when": "view == clearmlSessions",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "clearmlSessions.openInBrowser",
          "when": "view == clearmlSessions && viewItem == top-level-clearml-session-tree-item",
          "group": "inline"
        },
        {
          "command": "clearmlSessions.attachToSession",
          "when": "view == clearmlSessions && viewItem == top-level-clearml-session-tree-item",
          "group": "inline"
        },
        {
          "command": "clearmlSessions.copyValueToClipboard",
          "when": "view == clearmlSessions && viewItem == clearml-session-detail-tree-item",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "create-clearml-credentials": "bash run.sh generate-clearml-credentials-for-compose",
    "clean": "bash run.sh clean",
    "start-clearml-server": "bash run.sh start-clearml-server"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.3",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@pushcorn/hocon-parser": "^1.2.9",
    "axios": "^1.6.0",
    "fs-extra": "^11.1.1",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5"
  }
}
